@model IEnumerable<RPG_Guia.Models.Runa>

@{
    ViewBag.Title = "Index";
}

<div style="float:right; margin-right:20px;color:#1cc88a">
    <i class="far fa-plus-square"></i>
    @Html.ActionLink("Criar Nova", "Create")
</div>
<div style="padding: 1px 20px 1px 20px">
    <h2>Runas</h2>
    @foreach (var item in Model)
    {
        <!-- Collapsable Card Example -->
        <div class="card shadow mb-4">
            <!-- Card Header - Accordion -->
            <a href="#collapseCardExample" class="d-block card-header py-3 border-left-success " data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                <h5 class="m-0 font-weight-bold text-success ">@item.Nome</h5>
            </a>
            <!-- Card Content - Collapse -->
            <div class="collapse show" id="collapseCardExample">
                <div class="card-body">
                    <h6 class="m-0 font-weight-bold" style="color:rgb(35, 35, 35)">Descrição:</h6>
                    @item.Descriçao
                    @if (item.Alcance != null)
                    {
                        <h6 class="m-0 font-weight-bold" style="color:rgb(35, 35, 35)">Alcance:</h6>
                        @item.Alcance
                    }
                    @if (item.Dano != null)
                    {
                        <h6 class="m-0 font-weight-bold" style="color:rgb(35, 35, 35)">Dano:</h6>
                        @item.Dano
                    }
                    @if (item.Cura != null)
                    {
                        <h6 class="m-0 font-weight-bold" style="color:rgb(35, 35, 35)">Cura:</h6>
                        @item.Cura
                    }
                    @if (item.Duracao != null)
                    {
                        <h6 class="m-0 font-weight-bold" style="color:rgb(35, 35, 35)">Duração:</h6>
                        @item.Duracao
                    }
                    @if (item.Uso != null)
                    {
                        <h6 class="m-0 font-weight-bold" style="color:rgb(35, 35, 35)">Uso:</h6>
                        @item.Uso
                    }

                </div>
            </div>
        </div>
    }
</div>
